@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle"><i class="fa fa-question-circle" aria-hidden="true"></i></a>
            <ul class="dropdown-menu">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Сообщения и инструкции", "Index", "Messages")</li>
                }
                <li>@Html.ActionLink("Техническая поддержка", "Support", "Home")</li>
            </ul>
        </li>
        <li>
            @*@Html.ActionLink("Настройки профиля", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
            <a href="@Url.Action("Index", "Manage", routeValues: null)"><i class="fa fa-cog" aria-hidden="true"></i></a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle"><i class="fa fa-question-circle" aria-hidden="true"></i></a>
            <ul class="dropdown-menu">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Сообщения и инструкции", "Index", "Messages")</li>
                }
                <li>@Html.ActionLink("Техническая поддержка", "Support", "Home")</li>
            </ul>
        </li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
