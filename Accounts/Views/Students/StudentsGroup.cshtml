@model IEnumerable<Accounts.Models.ApplicationUser>


@{
    ViewBag.Title = "Список группы: ";
}

<h2>@ViewBag.Title @ViewBag.CurrentGroup.Name</h2>

<table class="table">
    <tr>
        <th>
            №
        </th>
        <th>
            ФИО
        </th>
        <th>
            Номер зачетки
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>   
        <th>
            Оценки
        </th>
    </tr>
    @{ int i = 0; }
    @foreach (var item in Model)
    {
    <tr>
        <td>
             @Html.Raw(++i)
        </td>
        <td>
            <a href="@Url.Action("Details", new { id = item.Id })">
                @Html.DisplayFor(modelItem => item.Lastname)

                @Html.DisplayFor(modelItem => item.Firstname)

                @Html.DisplayFor(modelItem => item.Middlename)
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfRecordBook)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>    
        <td>
            <a href="@Url.Action("DisciplinesStudent", "Journals", new { id = item.Id })">
                Журналы
            </a>
        </td>
    </tr>
    }

</table>
