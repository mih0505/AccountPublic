@model IEnumerable<Accounts.Models.StatisticStatement>

@{
    ViewBag.Title = "Статистика по заполнению ведомостей";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            №
        </th>
        <th>
            Факультет
        </th>
        <th>
            Всего <br />ведомостей
        </th>
        <th>
            Заполняемых (-енных) <br />ведомостей
        </th>
        <th></th>
    </tr>
    @{ int i = 0; }
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw(++i)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountStatementsAll)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FillStatements)
        </td>        
    </tr>
}

</table>
