@model IEnumerable <Accounts.Models.Course>

@{
    ViewBag.Title = "Список отсутствующих работ обучающихся за прошлые семестры";
}

<table class="table">
    <tr>
        <th style="min-width:100px;">
            Тип работы
        </th>
        <th style="min-width:90px;">
           Факультет
        </th>
        <th style="min-width:90px;">
            Кафедра
        </th>
        <th style="min-width:100px;">
            Группа
        </th>
        <th style="min-width:50px;">
            Курс
        </th>
        <th style="min-width:60px;">
            Семестр
        </th>
        <th style="min-width:100px;">
            Дата начала работы
        </th>
        <th style="min-width:100px;">
            Дата сдачи
        </th>
        <th style="min-width:60px;">
            Учебный год
        </th>        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*<a href="@Url.Action("Index", "CourseWorkStudents", new { id = item.GroupId })">*@
                @Html.DisplayFor(modelItem => item.Type)
                @*</a>*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.AliasFaculty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.ShortName)
            </td>
            <td>
                <a href="@Url.Action("Distribution", "Courses", new { id = item.Id })">
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @item.DateBegin.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.DateEnd.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentYear)
            </td>            
            <td>
                @*<a href="@Url.Action("Distribution", new { id = item.Id })" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-th-list"></span></a>*@
                <a href="@Url.Action("Edit", "Courses", new { id = item.Id })" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("Delete", "Courses", new { id = item.Id })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
