@model IEnumerable<Accounts.Models.BasicEducation>

<table class="table">
    <tr>
        @if (!User.IsInRole("Teachers"))
        {
            <th>
                @Html.DisplayNameFor(model => model.User.Lastname)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EducationalInstitution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qualification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (!User.IsInRole("Teachers"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.User.LastnameFM)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationalInstitution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                <a href="@Url.Action("GetFile", new { path = item.Path, name = item.FileName })" class="not-filled recent">@item.FileName</a>
            </td>
            <td>
                <a href="@Url.Action("EditBasicEdu", new { id = item.Id })" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("DeleteBasicEdu", new { id = item.Id })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
