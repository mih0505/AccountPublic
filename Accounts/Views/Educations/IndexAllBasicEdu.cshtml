@model IEnumerable<Accounts.Models.BasicEducationViewModel>

@{
    if (User.IsInRole("PersonnelDepartment"))
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

@{
    ViewBag.Title = "Базовое образование";
}

@if (User.IsInRole("PersonnelDepartment"))
    { <h2>@ViewBag.Title</h2> }

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EducationalInstitution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qualification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                <a href="@Url.Action("Index", new { teacherId = item.UserId })">
                    @Html.DisplayFor(modelItem => item.Teacher)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationalInstitution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                <a href="@Url.Action("GetFile", new { path = item.Path, name = item.FileName })" class="not-filled recent">Скачать документ</a>
            </td>
            <td>
                <a href="@Url.Action("EditBasicEdu", new { id = item.Id })" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("DeleteBasicEdu", new { id = item.Id })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
