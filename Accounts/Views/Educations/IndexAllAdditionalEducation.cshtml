@model IEnumerable<Accounts.Models.AdditionalEducationViewModel>
@{
    if (User.IsInRole("PersonnelDepartment"))
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}
@{
    ViewBag.Title = "Дополнительное проф. образование";
}

@if (User.IsInRole("PersonnelDepartment"))
{<h2>@ViewBag.Title</h2>}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher)
        </th>
        <th>
            Тип
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                <a href="@Url.Action("Index", new { teacherId = item.UserId })">
                    @Html.DisplayFor(modelItem => item.Teacher)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>

            <td>
                <a href="@Url.Action("GetFile", new { path = item.Path, name = item.FileName })" class="not-filled recent">Скачать документ</a>
            </td>
            <td>
                <a href="@Url.Action("EditAdditionalEducation", new { id = item.Id })" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("DeleteAdditionalEducation", new { id = item.Id })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
