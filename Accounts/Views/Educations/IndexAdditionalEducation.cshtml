@model IEnumerable<Accounts.Models.AdditionalEducation>

<table class="table">
    <tr>
        @if (!User.IsInRole("Teachers"))
        {
            <th>
                @Html.DisplayNameFor(model => model.User.Lastname)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            Тип
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (!User.IsInRole("Teachers"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.User.LastnameFM)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a href="@Url.Action("GetFile", new { path = item.Path, name = item.FileName })" class="not-filled recent">@item.FileName</a>
            </td>
            <td>
                <a href="@Url.Action("EditAdditionalEducation", new { id = item.Id })" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("DeleteAdditionalEducation", new { id = item.Id })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
