@model IEnumerable<Accounts.Models.Study>
@{
    ViewBag.Title = "Успеваемость студента";
}

    
@if (Model != null)
{
    
    <h3>Список занятий по дисциплине: @ViewBag.Discipline</h3>
    <br />
    <table class="journal-student">        
        <tbody>
            @{ int i = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td rowspan="2" class="journal-student-central">
                        @(++i)
                    </td>
                    <td rowspan="2" class="journal-student-central">                        
                        @item.Lesson.Date.ToString("dd.MM.yyyy")
                    </td>
                    <td>
                        <strong>Тема:</strong>
                        @Html.DisplayFor(modelItem => item.Lesson.Topic)
                    </td>
                    <td rowspan="2" class="journal-student-central">
                        @Html.DisplayFor(modelItem => item.Grade1)
                        @if (@item.Grade2 != null)
                        {
                            @Html.Raw(" / ") @Html.DisplayFor(modelItem => item.Grade2)
                        }
                        @if (@item.Grade3 != null)
                        {
                            @Html.Raw(" / ") @Html.DisplayFor(modelItem => item.Grade3)
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Домашнее задание:</strong>
                        @Html.DisplayFor(modelItem => item.Lesson.HomeWork)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>
        @ViewBag.Discipline
    </h4>
}

